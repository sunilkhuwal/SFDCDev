<apex:page standardController="Class__c">
  <apex:form >
      <apex:pageblock title="Class Detail">
          <apex:pageBlockButtons >
            <apex:commandButton value="Save" action="{!Save}"/>

          </apex:pageBlockButtons>
          <apex:pageblockSection >
              <apex:inputfield label="Name" value="{!Class__c.Name__c}"/>
              <apex:inputfield label="Class Teacher" value="{!Class__c.ClassTeacher__c}" />
              <apex:inputfield label="Detailed Description" value="{!Class__c.DetailedDescription__c}" />
              <apex:inputfield label="Board" value="{!Class__c.Board__c}" />
              <apex:inputfield label="Fee" value="{!Class__c.Fee__c}" />
              <apex:inputfield label="Max Size" value="{!Class__c.MaxSize__c}" />
              <apex:inputField label="My Count" value="{!Class__c.MyCount__c}"/>
          </apex:pageblockSection>
      </apex:pageblock>
  </apex:form>  
</apex:page>